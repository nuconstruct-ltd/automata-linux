{
    "cvm_config": {
        "emulation_mode" :{
            "enable": false,
            "cloud_provider": "gcp",
            "tee_type": "tdx" ,
            "emulation_data_path": "./emulation_mode_data",
            "enable_emulation_data_update": true
        },

        "firewall": {
            "allowed_ports": [
                {
                    "name": "allow_agent_local",
                    "protocol": "tcp",
                    "port": "7999"
                },
                {
                    "name": "allow_agent_external",
                    "protocol": "tcp",
                    "port": "8000"
                },
                {
                    "name": "allow_metrics_external",
                    "protocol": "tcp",
                    "port": "443"
                },
                {
                    "name": "allow_tool_rpc_external",
                    "protocol": "tcp",
                    "port": "8545"
                },
                {
                    "name": "allow_tool_ws_external",
                    "protocol": "tcp",
                    "port": "8546"
                },
                {
                    "name": "allow_tool_authrpc_external",
                    "protocol": "tcp",
                    "port": "8551"
                },
                {
                    "name": "allow_tool_p2p_tcp_external",
                    "protocol": "tcp",
                    "port": "30303"
                },
                {
                    "name": "allow_tool_p2p_udp_external",
                    "protocol": "udp",
                    "port": "30303"
                },
                {
                    "name": "allow_tool_relay_external",
                    "protocol": "tcp",
                    "port": "9060"
                },
                {
                    "name": "allow_tool_metrics_external",
                    "protocol": "tcp",
                    "port": "6060"
                },
                {
                    "name": "allow_lighthouse_metrics_external",
                    "protocol": "tcp",
                    "port": "5054"
                },
                {
                    "name": "allow_lighthouse_tcp_enr_external",
                    "protocol": "tcp",
                    "port": "9000"
                },
                {
                    "name": "allow_lighthouse_udp_enr_external",
                    "protocol": "udp",
                    "port": "9000"
                },
                {
                    "name": "allow_lighthouse_http_external",
                    "protocol": "tcp",
                    "port": "5052"
                }
            ],
            "maintenance_mode_host_port": "2222"
        },

        "https_server" :{
            "enable_tls": true,
            "enable_auth": true
        },

        "container_api" : {
            "container_engine": "podman",
            "container_owner": "automata"
        },

        "maintenance_mode" : {
            "allow" : true,
            "signal" : "SIGUSR2"
        },

        "disk_config": {
            "enable": true,
            "disk_mount_point": "/data/data-disk",
            "disk_encryption": {
                "enable": true,
                "encryption_key_security": "standard"
            }
        }
    },

    "workload_config": {
        "services": {
            "allow_remove": false,
            "allow_add_new_service": true,
            "allow_update": ["operator", "controller", "tool-node"],
            "skip_measurement": ["operator", "controller"]
        },
        "image_signature_verification": {
            "enable":false,
            "auth_info_file_path": "/data/workload/secrets/auth_info.json",
            "signature_verification_policy_path":"/data/workload/config/cvm_agent/sample_image_verify_policy.json"
        }
    }
}
